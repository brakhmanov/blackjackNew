<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/playerHandTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player's Hand:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/dealerHandTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dealer's Hand:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>
    <Button
        android:id="@+id/hitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hit"
        android:layout_below="@+id/dealerHandTextView"
        android:layout_marginTop="16dp"
        android:onClick="onHitClick"/>
    <Button
        android:id="@+id/standButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stand"
        android:layout_below="@+id/dealerHandTextView"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/hitButton"
        android:layout_marginLeft="16dp"
        android:onClick="onStandClick"/>
    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_below="@+id/dealerHandTextView"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:onClick="onResetClick"/>

</RelativeLayout>